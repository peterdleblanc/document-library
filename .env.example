# Application Settings
APP_NAME=Document Library
APP_VERSION=1.0.0
DEBUG=True

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# PostgreSQL Database
POSTGRES_USER=doclib
POSTGRES_PASSWORD=doclib_secure_password_change_in_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=document_library

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_change_in_production
MINIO_SECURE=False
MINIO_BUCKET_DOCUMENTS=documents
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Meilisearch
MEILISEARCH_URL=http://meilisearch:7700
MEILISEARCH_API_KEY=
MEILISEARCH_PORT=7700
MEILI_ENV=development

# Claude AI (for metadata generation)
ANTHROPIC_API_KEY=

# OpenAI (for embeddings)
OPENAI_API_KEY=

# OCR
TESSERACT_CMD=/usr/bin/tesseract
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# File Upload
MAX_UPLOAD_SIZE=104857600

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Production Settings (only for docker-compose.prod.yml)
API_URL=http://localhost
